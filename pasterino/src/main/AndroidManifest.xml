<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pyamsoft.pasterino">

  <!-- For accessibility service -->
  <uses-permission android:name="android.permission.BIND_ACCESSIBILITY_SERVICE"/>

  <application
      android:name=".Pasterino"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:theme="@style/Theme.Pasterino.Light">

    <!-- Support super wide screen -->
    <meta-data
        android:name="android.max_aspect"
        android:value="2.1"/>

    <!-- Main Activity -->
    <activity
        android:name=".main.MainActivity"
        android:excludeFromRecents="false"
        android:exported="true"
        android:label="@string/app_name"
        android:launchMode="singleTask"
        android:theme="@style/Theme.Pasterino.Light.Splash">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>

    <!-- Accessibility Service -->
    <service
        android:name=".service.PasteService"
        android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
      <intent-filter>
        <action android:name="android.accessibilityservice.AccessibilityService"/>
      </intent-filter>
      <meta-data
          android:name="android.accessibilityservice"
          android:resource="@xml/pasterino"/>
    </service>

    <service
        android:name=".service.SinglePasteService"
        android:exported="false"/>

    <provider
        android:name=".PasterinoSingleInitProvider"
        android:authorities="com.pyamsoft.pasterino.PasterinoSingleInitProvider"
        android:exported="false"
        android:syncable="false"/>

  </application>

</manifest>
